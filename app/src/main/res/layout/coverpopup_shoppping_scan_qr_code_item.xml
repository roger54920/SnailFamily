<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px_500"
        android:layout_height="@dimen/px_520"
        android:layout_gravity="center"
        android:background="@drawable/dialog_bg_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_80"
            android:text="怡宝纯净水"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_30" />

        <TextView
            android:id="@+id/commodity_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_50"
            android:text="¥1.4"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_36" />

        <LinearLayout
            android:layout_marginTop="@dimen/px_130"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_50"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/right_dish_remove"
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:clickable="true"
                android:src="@mipmap/reduce_shopping_icon" />
            <TextView
                android:text="1"
                android:id="@+id/right_dish_account"
                android:layout_width="@dimen/px_70"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/px_28" />

            <ImageView
                android:id="@+id/right_dish_add"
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:clickable="true"
                android:src="@mipmap/add_shopping_icon" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/px_50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/cl_e3e3e3" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="@dimen/px_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/cl_666666"
                android:textSize="@dimen/px_28" />

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="@dimen/px_60"
                android:layout_gravity="center_vertical"
                android:background="@color/cl_e3e3e3" />

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="@dimen/px_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/affirm"
                android:textColor="@color/cl_6fd1c8"
                android:textSize="@dimen/px_28" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>