<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sender_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px_20"
    android:orientation="vertical"
    android:paddingBottom="@dimen/px_20"
    android:paddingLeft="@dimen/px_32">

    <TextView
        android:id="@+id/send_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/px_32"
        android:layout_marginTop="@dimen/px_20"
        android:text="11111"
        android:textColor="@color/cl_6fd1c8"
        android:textSize="@dimen/px_26" />

    <TextView
        android:id="@+id/express_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/tracking_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_15"
        android:text="快递单号："
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/express_datetime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_15"
        android:text=""
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/courier_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/express_datetime"
        android:layout_marginTop="@dimen/px_15"
        android:text="快递员正在派送中，联系电话13811111111"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/px_28"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/accept_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/express_phone"
        android:layout_marginTop="@dimen/px_20">

        <TextView
            android:id="@+id/sir_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李先生"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_30" />

        <TextView
            android:id="@+id/sir_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_32"
            android:layout_toRightOf="@+id/sir_name"
            android:singleLine="true"
            android:text="北京市朝阳区望京花家北理1号楼3门806"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/px_28" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_15">

        <TextView
            android:id="@+id/accept_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17525652525"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_26" />

        <TextView
            android:singleLine="true"
            android:layout_marginTop="@dimen/px_15"
            android:layout_below="@+id/accept_phone"
            android:id="@+id/arrive_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_32"
            android:text="到达时间2016/12/18 11:00"
            android:textColor="@color/cl_6fd1c8"
            android:textSize="@dimen/px_26" />
    </RelativeLayout>
</LinearLayout>