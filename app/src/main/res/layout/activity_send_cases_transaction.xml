<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_add_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.SendCasesTransactionActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/white">

        <ImageView
            android:padding="@dimen/px_20"
            android:id="@+id/return_arrows"
            android:layout_marginLeft="@dimen/px_12"
            android:src="@drawable/user_return_icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="寄件订单"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:background="@color/cl_f5f5f5">
        <RelativeLayout
            android:id="@+id/send_message"
            android:layout_marginTop="@dimen/px_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_220"
            android:layout_marginBottom="@dimen/px_20"
            android:background="@color/white"
            android:paddingLeft="@dimen/px_32">

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_32"
                android:layout_marginTop="@dimen/px_20"
                android:text="等待蜗牛快递员上门揽件"
                android:textColor="@color/cl_6fd1c8"
                android:textSize="@dimen/px_26" />

            <TextView
                android:id="@+id/cyly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28" />

            <TextView
                android:id="@+id/send_cases_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cyly"
                android:layout_marginTop="@dimen/px_15"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28" />

            <TextView
                android:id="@+id/addressee_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_cases_person"
                android:layout_marginTop="@dimen/px_15"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28" />



            <TextView
                android:id="@+id/prcal_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressee_person"
                android:layout_marginTop="@dimen/px_15"
                android:text="您的包裹未称重"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_above="@+id/buttom"
            android:background="@color/cl_e3e3e3" />

        <RelativeLayout
            android:id="@+id/buttom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_32"
                android:src="@drawable/voice_icon" />

            <EditText
                android:id="@+id/sr_dialog_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_70"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_30"
                android:layout_toLeftOf="@+id/phone"
                android:layout_toRightOf="@id/voice"
                android:background="@drawable/dialog_box"
                android:paddingLeft="@dimen/px_20"
                android:singleLine="true"
                android:textColor="@color/cl_333333"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/px_30" />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_32"
                android:src="@drawable/phone_icon" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

