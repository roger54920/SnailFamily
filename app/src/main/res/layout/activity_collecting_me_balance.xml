<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parcel_particulars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.CollectingMeBalanceActivity">


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_32"
            android:src="@mipmap/zuojian_hei" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="快递详情"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:background="@color/cl_f5f5f5">

        <RelativeLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:background="@color/white">

            <TextView
                android:layout_marginLeft="@dimen/px_32"
                android:id="@+id/xzcz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="请选择充值金额"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_30" />
            <RadioGroup
                android:id="@+id/group"
                android:layout_marginRight="@dimen/px_32"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_214"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/xzcz"
                android:layout_marginTop="@dimen/px_50">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_0"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@drawable/alipay_radio_style"
                    android:gravity="top" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_0"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@drawable/alipay_radio_style"
                    android:gravity="center" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_0"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@drawable/alipay_radio_style"
                    android:gravity="bottom" />
            </RadioGroup>

            <RelativeLayout
                android:layout_marginLeft="@dimen/px_32"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_214"
                android:layout_below="@+id/xzcz"
                android:layout_marginTop="@dimen/px_50">

                <TextView
                    android:id="@+id/ws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px_1"
                    android:text="50"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_28" />

                <TextView
                    android:id="@+id/yb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ws"
                    android:layout_marginTop="@dimen/px_52"
                    android:text="100"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/yb"
                    android:layout_marginTop="@dimen/px_51"
                    android:text="300"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_28" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_214"
                android:layout_below="@+id/xzcz"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/px_50"
                android:layout_marginTop="@dimen/px_50">

                <TextView
                    android:id="@+id/wu_w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px_1"
                    android:text="可免费获得蜗牛币5个"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_28" />

                <TextView
                    android:id="@+id/wu_ys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wu_w"
                    android:layout_marginTop="@dimen/px_52"
                    android:text="可免费获得蜗牛币10个"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wu_ys"
                    android:layout_marginTop="@dimen/px_51"
                    android:text="可免费获得蜗牛币50个"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_28" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add_btn"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_marginLeft="@dimen/px_32"
            android:text="实际支付金额为："
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add_btn"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_toRightOf="@+id/sj"
            android:text="50元"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_30" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/cl_6fd1c8"
            android:gravity="center"
            android:text="我要充值"
            android:textColor="@color/white"
            android:textSize="@dimen/px_32" />
    </RelativeLayout>
</RelativeLayout>
