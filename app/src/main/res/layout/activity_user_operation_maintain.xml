<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_message_maintain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.UserOperationMaintainActivity">
    <RelativeLayout
        android:id="@+id/title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96">
        <ImageView
            android:layout_marginLeft="@dimen/px_32"
            android:src="@mipmap/zuojian_hei"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/cl_333333"
            android:textStyle="normal"
            android:text="个人信息维护"
            android:textSize="@dimen/px_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/cl_f5f5f5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_marginRight="@dimen/px_32"
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/px_26"
        android:textColor="@color/cl_6fd1c8"
        android:text="跳过"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_20"
        />
    <RelativeLayout
        android:paddingLeft="@dimen/px_32"
        android:paddingRight="@dimen/px_32"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="@dimen/px_30"
            android:layout_marginBottom="@dimen/px_20"
            android:textSize="@dimen/px_32"
            android:textColor="@color/cl_333333"
            android:text="姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/sr_name"
            android:singleLine="true"
            android:paddingLeft="@dimen/px_20"
            android:textSize="@dimen/px_30"
            android:hint="请输入名字"
            android:textColor="@color/cl_333333"
            android:textColorHint="@color/cl_b3b3b3"
            android:gravity="center_vertical"
            android:background="@drawable/edit_text_shape"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80" />
        <TextView
            android:id="@+id/sfz"
            android:layout_below="@+id/sr_name"
            android:layout_marginTop="@dimen/px_30"
            android:layout_marginBottom="@dimen/px_20"
            android:textSize="@dimen/px_32"
            android:textColor="@color/cl_333333"
            android:text="身份证号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textCursorDrawable="@drawable/edit_cursor"
            android:id="@+id/sadf"
            android:maxLength="18"
            android:singleLine="true"
            android:inputType="phone|number"
            android:layout_marginBottom="@dimen/px_30"
            android:paddingLeft="@dimen/px_20"
            android:textSize="@dimen/px_30"
            android:hint="邮寄包裹时需要真实有效的身份证号码"
            android:textColor="@color/cl_333333"
            android:textColorHint="@color/cl_b3b3b3"
            android:gravity="center_vertical"
            android:background="@drawable/edit_text_shape"
            android:layout_below="@+id/sfz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/px_32"
        android:paddingRight="@dimen/px_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cy_adress"
            android:textSize="@dimen/px_32"
            android:textColor="@color/cl_333333"
            android:text="常用地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/youjian_tou"
            android:layout_width="@dimen/px_16"
            android:layout_height="@dimen/px_28" />
    </RelativeLayout>

    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_40"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_150"
        android:layout_below="@+id/region"
        android:text="确认"
        android:textSize="@dimen/px_32"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:id="@+id/login"
        android:layout_width="@dimen/px_280"
        android:layout_height="@dimen/px_80" />
    </LinearLayout>
</LinearLayout>
