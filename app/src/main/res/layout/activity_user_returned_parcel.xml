<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_message_maintain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.UserReturnedParcelActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/white">

        <ImageView
            android:id="@+id/return_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_32"
            android:src="@mipmap/zuojian_hei" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="退回包裹"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cl_f5f5f5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_300"
            android:layout_marginTop="@dimen/px_30"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/send_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_marginLeft="@dimen/px_32"
                android:layout_marginRight="@dimen/px_32"
                android:layout_marginTop="@dimen/px_30"
                android:background="@drawable/edit_shape">
                <TextView
                    android:id="@+id/thyx"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_centerVertical="true"
                    android:text="*退货原因"
                    android:textColor="@color/cl_b3b3b3"
                    android:textSize="@dimen/px_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@id/thyx"
                    android:id="@+id/reason_return_tx"
                    android:layout_marginLeft="@dimen/px_40"
                    android:layout_centerVertical="true"
                    android:text="请选择退货原因"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/px_30"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/pull_down_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/submit_applications_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/cl_6fd1c8"
        android:gravity="center"
        android:text="提交申请"
        android:textColor="@color/white"
        android:textSize="@dimen/px_32" />
</RelativeLayout>
