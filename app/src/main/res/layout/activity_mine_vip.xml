<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addressee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.MineVIPActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/white">

        <ImageView
            android:id="@+id/return_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_12"
            android:padding="@dimen/px_20"
            android:src="@drawable/user_return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_vip"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_310"
        android:background="@color/cl_cc000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:background="@mipmap/vip_card"
            android:orientation="vertical"
            android:padding="@dimen/px_30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/head_portrait"
                    android:layout_width="@dimen/px_80"
                    android:layout_height="@dimen/px_80"
                    android:scaleType="fitXY"
                    android:src="@drawable/circle_shape" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_toRightOf="@+id/head_portrait"
                    android:text="11"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_30" />

                <ImageView
                    android:id="@+id/vip_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_20"
                    android:src="@drawable/vip_four" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/px_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:layout_centerVertical="true"
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/px_400"
                    android:layout_height="@dimen/px_4"
                    android:max="100"
                    android:progress="20"
                    android:progressDrawable="@drawable/progressbar"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/growth_value"
                    android:layout_alignParentRight="true"
                    android:text="成长值200/1000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:paddingBottom="@dimen/px_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/immediately_renewal_btn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="@dimen/px_160"
                    android:layout_height="@dimen/px_50"
                    android:background="@drawable/button_orange_shape"
                    android:gravity="center"
                    android:text="@string/immediately_renewal"
                    android:textColor="@color/cl_fbac00"
                    android:textSize="@dimen/px_26" />
                <TextView
                    android:id="@+id/expiration_time"
                    android:paddingBottom="@dimen/px_10"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/px_26"
                    android:text="到期时间：2018-10-05"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cl_f5f5f5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_30"
            android:src="@mipmap/bottom_border" />

    </RelativeLayout>
</LinearLayout>
