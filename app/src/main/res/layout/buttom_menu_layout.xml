<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_menu_deal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_96"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/px_7">

    <LinearLayout
        android:id="@+id/llHome"
        android:layout_width="@dimen/px_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px_7"
            android:src="@drawable/tab_home" />

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/home"
            android:textColor="@drawable/tab_textview"
            android:textSize="@dimen/px_20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llShopping"
        android:layout_width="@dimen/px_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px_7"
            android:src="@drawable/tab_expectative" />

        <TextView
            android:id="@+id/tvShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/shopping"
            android:textColor="@drawable/tab_textview"
            android:textSize="@dimen/px_20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMe"
        android:layout_width="@dimen/px_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px_7"
            android:src="@drawable/tab_me" />

        <TextView
            android:id="@+id/tvMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/my"
            android:textColor="@drawable/tab_textview"
            android:textSize="@dimen/px_20" />
    </LinearLayout>
</LinearLayout>