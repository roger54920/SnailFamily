<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg_shape"
        android:layout_width="@dimen/px_656"
        android:layout_height="@dimen/px_400">
        <TextView
            android:padding="@dimen/px_32"
            android:text="@string/system_prompt"
            android:textSize="@dimen/px_32"
            android:textColor="@color/cl_6fd1c8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/px_32"
            android:id="@+id/content_tv"
            android:textSize="@dimen/px_28"
            android:textColor="@color/cl_333333"
            android:text="确定要注销吗？"
            android:layout_marginRight="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="@dimen/px_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="@dimen/px_30"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_32"
                android:id="@+id/cancel_btn"
                android:background="@drawable/button_return_shape"
                android:layout_width="@dimen/px_220"
                android:layout_height="@dimen/px_80" />
            <Button
                android:layout_marginRight="@dimen/px_30"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="@string/affirm"
                android:textColor="@color/white"
                android:textSize="@dimen/px_32"
                android:id="@+id/confirm_btn"
                android:background="@drawable/button_affirm_shape"
                android:layout_width="@dimen/px_220"
                android:layout_height="@dimen/px_80" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>