<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_parcel_particulars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.CollectingPaymentActivity">


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/white">

        <ImageView
            android:padding="@dimen/px_20"
            android:id="@+id/return_arrows"
            android:layout_marginLeft="@dimen/px_12"
            android:src="@drawable/user_return_icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/collection"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:background="@color/cl_f5f5f5">

        <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_32"
            android:layout_marginTop="@dimen/px_20"
            android:text="@string/snail_can_stand_you_paid_cod_package"
            android:textColor="@color/cl_666666"
            android:textSize="@dimen/px_28" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/two"
            android:background="@color/white"
            android:paddingLeft="@dimen/px_32">

            <TextView
                android:id="@+id/dh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/enter_payment_in_cash_on_delivery_parcel_courier_number"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_30" />

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_below="@+id/dh"
                android:layout_marginBottom="@dimen/px_30"
                android:layout_marginTop="@dimen/px_30"
                android:background="@drawable/edit_text_shape"
                android:gravity="center_vertical"
                android:hint="@string/search"
                android:singleLine="true"
                android:maxLength="32"
                android:paddingLeft="@dimen/px_20"
                android:textColor="@color/cl_333333"
                android:textColorHint="@color/cl_b3b3b3"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/px_30" />

        </RelativeLayout>

        <Button
            android:id="@+id/next_step_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_96"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/cl_6fd1c8"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="@dimen/px_32" />
    </RelativeLayout>
</RelativeLayout>

