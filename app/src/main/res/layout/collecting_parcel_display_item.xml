<?xml version="1.0" encoding="utf-8"?>
<com.example.ysww.snailfamily.custom.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/px_10"
    android:clickable="true">
    <!-- 第一个子view，显示ListView数据内容-->
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <RelativeLayout
            android:paddingLeft="@dimen/px_32"
            android:paddingRight="@dimen/px_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/px_20"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_32"
                android:textColor="@color/cl_6fd1c8"
                android:textSize="@dimen/px_26"
                android:id="@+id/conllecting_state"
                android:text="快递派送中"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cyly"
                android:layout_below="@+id/conllecting_state"
                android:text="承运来源："
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/cyly"
                android:id="@+id/express_type"
                android:layout_below="@+id/conllecting_state"
                android:text="EMS"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/px_15"
                android:id="@+id/express_number"
                android:layout_toRightOf="@+id/kddh"
                android:layout_below="@+id/cyly"
                android:text="11891495555203"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/px_15"
                android:id="@+id/kddh"
                android:layout_below="@+id/cyly"
                android:text="快递单号："
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/px_15"
                android:id="@+id/express_datetime"
                android:layout_below="@+id/express_number"
                android:text="2016/12/18  11:00"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/px_15"
                android:id="@+id/kdps"
                android:layout_below="@+id/express_datetime"
                android:text="快递员正在派送中，联系电话"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/px_15"
                android:id="@+id/express_phone"
                android:layout_toRightOf="@+id/kdps"
                android:layout_below="@+id/express_datetime"
                android:text="13811111111"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/express_phone"
                android:layout_marginTop="@dimen/px_30"
                android:layout_marginRight="@dimen/px_32"
                android:textColor="@color/cl_6fd1c8"
                android:textSize="@dimen/px_26"
                android:id="@+id/conllecting_money"
                android:text="代付金额：300元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="@dimen/px_20"
                android:layout_below="@+id/express_phone"
                android:layout_marginTop="@dimen/px_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_32"
                android:textColor="@color/cl_6fd1c8"
                android:textSize="@dimen/px_26"
                android:id="@+id/place_datetime"
                android:text="2016/12/18  18:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 下面是侧滑菜单项 即：第2+个子view-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_deselect"
            android:layout_width="@dimen/px_100"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="@dimen/px_30"
            android:gravity="center"
            android:background="@color/cl_f30000"
            android:textColor="@color/white"/>
    </LinearLayout>
</com.example.ysww.snailfamily.custom.SwipeMenuLayout>