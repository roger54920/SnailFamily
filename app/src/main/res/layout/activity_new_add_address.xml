<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_add_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.NewAddAddressActivity">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/white">

        <ImageView
            android:id="@+id/return_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_12"
            android:padding="@dimen/px_20"
            android:src="@drawable/user_return_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/new_address"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/px_36"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/one"
        android:layout_marginBottom="@dimen/px_96"
        android:background="@color/cl_f5f5f5">


        <Button
            android:id="@+id/address_change_btn"
            android:layout_width="@dimen/px_180"
            android:layout_height="@dimen/px_60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_32"
            android:layout_marginTop="@dimen/px_20"
            android:background="@drawable/button_send_shape"
            android:gravity="center"
            android:text="@string/ordinary_address"
            android:textColor="@color/white"
            android:textSize="@dimen/px_30" />

        <RelativeLayout
            android:id="@+id/snail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_change_btn"
            android:layout_marginTop="@dimen/px_20">

            <RelativeLayout
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:background="@color/white"
                android:paddingLeft="@dimen/px_32"
                android:paddingRight="@dimen/px_32">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/region"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_32" />

                <TextView
                    android:id="@+id/region_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px_40"
                    android:layout_toLeftOf="@+id/region_img"
                    android:text="@string/please_select"
                    android:textColor="@color/cl_666666"
                    android:textSize="@dimen/px_26" />

                <ImageView
                    android:id="@+id/region_img"
                    android:layout_width="@dimen/px_16"
                    android:layout_height="@dimen/px_28"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/youjian" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_below="@+id/region"
                android:background="@color/cl_e3e3e3" />

            <RelativeLayout
                android:id="@+id/plot_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:layout_below="@+id/line"
                android:background="@color/white"
                android:paddingLeft="@dimen/px_32"
                android:paddingRight="@dimen/px_32">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/village_name"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_32" />

                <TextView
                    android:id="@+id/plot_name_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px_40"
                    android:layout_toLeftOf="@+id/plot_img"
                    android:text="@string/please_select"
                    android:textColor="@color/cl_666666"
                    android:textSize="@dimen/px_26" />

                <ImageView
                    android:id="@+id/plot_img"
                    android:layout_width="@dimen/px_16"
                    android:layout_height="@dimen/px_28"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/youjian" />
            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_below="@+id/plot_name"
                android:background="@color/cl_e3e3e3" />

            <RelativeLayout
                android:id="@+id/tablet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:layout_below="@+id/line2"
                android:background="@color/white"
                android:paddingLeft="@dimen/px_32"
                android:paddingRight="@dimen/px_32">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/house_number"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_32" />

                <TextView
                    android:id="@+id/tablet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px_40"
                    android:layout_toLeftOf="@+id/tablet_img"
                    android:text="@string/please_select"
                    android:textColor="@color/cl_666666"
                    android:textSize="@dimen/px_26" />

                <ImageView
                    android:id="@+id/tablet_img"
                    android:layout_width="@dimen/px_16"
                    android:layout_height="@dimen/px_28"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/youjian" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/two"
                android:layout_marginLeft="@dimen/px_32"
                android:layout_marginTop="@dimen/px_16">

                <TextView
                    android:id="@+id/snail_electron_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_allocates_electronic_package_box"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_26" />

                <TextView
                    android:id="@+id/se_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/snail_electron_tx"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_26" />

                <TextView
                    android:id="@+id/sd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/snail_electron_tx"
                    android:layout_marginTop="@dimen/px_20"
                    android:text="@string/manual_customization_electronic_package_box"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sd"
                    android:layout_marginRight="@dimen/px_32"
                    android:layout_marginTop="@dimen/px_20"
                    android:text="@string/use_confidential"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_26" />

                <Button
                    android:id="@+id/manual_customization_btn"
                    android:layout_width="@dimen/px_160"
                    android:layout_height="@dimen/px_50"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/snail_electron_tx"
                    android:layout_marginRight="@dimen/px_32"
                    android:layout_marginTop="@dimen/px_10"
                    android:background="@drawable/button_mail_shape"
                    android:gravity="center"
                    android:text="@string/manual_customization"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_26" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/relativeLayout"
                android:layout_alignStart="@+id/relativeLayout"
                android:layout_below="@+id/tablet"
                android:layout_marginTop="@dimen/px_30">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="@dimen/px_44"
                    android:layout_height="@dimen/px_44"
                    android:button="@drawable/checkbox_style" />

                <TextView
                    android:id="@+id/nin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_toRightOf="@+id/checkbox"
                    android:text="@string/if_employ_electronic_package_box"
                    android:textColor="@color/cl_333333"
                    android:textSize="@dimen/px_32" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/common_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_change_btn"
            android:layout_marginTop="@dimen/px_20"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px_40"
            android:paddingLeft="@dimen/px_32"
            android:paddingRight="@dimen/px_32"
            android:visibility="invisible"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/name"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_32" />

            <EditText
                android:maxLength="11"
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_below="@+id/name"
                android:background="@drawable/edit_text_shape"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:gravity="center_vertical"
                android:hint="@string/import_name"
                android:paddingLeft="@dimen/px_20"
                android:singleLine="true"
                android:textColor="@color/cl_333333"
                android:textColorHint="@color/cl_b3b3b3"
                android:textSize="@dimen/px_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/mobile"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_32" />

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_below="@+id/name"
                android:background="@drawable/edit_text_shape"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:gravity="center_vertical"
                android:hint="@string/import_mobile"
                android:inputType="phone|number"
                android:maxLength="11"
                android:paddingLeft="@dimen/px_20"
                android:singleLine="true"
                android:textColor="@color/cl_333333"
                android:textColorHint="@color/cl_b3b3b3"
                android:textSize="@dimen/px_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/chelsea"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_32" />

            <TextView
                android:id="@+id/input_region"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_below="@+id/name"
                android:background="@drawable/edit_text_shape"
                android:gravity="center_vertical"
                android:hint="@string/select_area"
                android:paddingLeft="@dimen/px_20"
                android:singleLine="true"
                android:textColor="@color/cl_333333"
                android:textColorHint="@color/cl_b3b3b3"
                android:textSize="@dimen/px_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/detailed_address"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/px_32" />

            <EditText
                android:maxLength="85"
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_below="@+id/name"
                android:background="@drawable/edit_text_shape"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:gravity="center_vertical"
                android:hint="@string/import_detailed_address"
                android:paddingLeft="@dimen/px_20"
                android:singleLine="true"
                android:textColor="@color/cl_333333"
                android:textColorHint="@color/cl_b3b3b3"
                android:textSize="@dimen/px_30" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/add_address_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/cl_6fd1c8"
        android:gravity="center"
        android:text="@string/newly_increased"
        android:textColor="@color/white"
        android:textSize="@dimen/px_32" />
</RelativeLayout>